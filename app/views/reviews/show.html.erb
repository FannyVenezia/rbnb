<%= render "shared/navbar" %>

<div class="entry-ban" style="text-align: center">
  <h1 style="margin-top: 30px">Thank you for your contribution !</h1>
  <h2>We appreciate all your opinions</h2>
</div>

<div style="text-align: center; margin-top: 40px">
  <h4>Your review :</h4>
</div>

<div class="details-sejour" style="display: flex; justify-content: space-between">
  <div>
    <h3 style="margin-bottom: 20px"><%= @review.planet.name %></h5>
    <%= @review.title %>
    <%= @review.content %> <br>
    <div>
      <% if @review.rating == 4 %>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-regular fa-star"></i>
      <% elsif @review.rating == 3 %>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-regular fa-star"></i>
        <i class="fa-regular fa-star"></i>
      <% elsif @review.rating == 5 %>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
      <% elsif @review.rating == 2 %>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-regular fa-star"></i>
        <i class="fa-regular fa-star"></i>
        <i class="fa-regular fa-star"></i>
      <% end %>
    </div>
    <%= cl_image_tag @review.planet.photos.first.key %>
  </div>
  <div style="margin-top: 220px">
    <%= link_to "Edit your review", edit_review_path, class: "btn btn-outline-light" %>
    <%= link_to "delete your review", review_path(@review), data: { turbo_method: :delete }, class: "btn btn-outline-light" %>
  </div>
</div>

<%= link_to "All your reviews", reviews_path, class: "btn btn-outline-light" %>
