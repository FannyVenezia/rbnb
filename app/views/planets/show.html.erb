<%= render "shared/navbar" %>
<%= @planet.name %>

<% @planet.photos.each do |photo| %>
  <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<% if policy(@planet).edit? %>
  <%= link_to "Edit this planet", edit_planet_path(@planet) %> |
<% end %>

<%= button_to "Destroy this planet", @planet, method: :delete if policy(@planet).destroy? %>
