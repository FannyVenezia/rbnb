  <div class ="black_container">

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://images.pexels.com/photos/1276314/pexels-photo-1276314.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.pexels.com/photos/12498795/pexels-photo-12498795.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.pexels.com/photos/5476413/pexels-photo-5476413.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" alt="Third slide">
        </div>
      </div>
    </div>



    <ul class= "planet_description">
      <div class= "planet_text">
        <div class= "title_show"><h3><strong>Planet name:</strong></h3></div>
          <li><%= @planet.name %></li>
        <div class= "title_show"><h3><strong>Mass:</strong></h3></div>
          <li><%= @planet.mass%></li>
        <div class= "title_show"><h3><strong>Area:</strong></h3></div>
          <li><%=  @planet.area%></li>
        <div class= "title_show"><h3><strong>Solar system:</strong></h3></div>
          <li><%=  @planet.solar_system %></li><br>

          <li><h5 id="price">Price: from 20 K$</h5></li>

      </div>
      <div class= "button_rent_planet">
        <%= link_to "Rent this planet", new_planet_booking_path(@planet), class: "btn btn-outline-light"%>
      </div>
    </ul>
  </div>
    <div class = "buttons" >
      <div class= "button_back_planets">
        <%= link_to "Back to planets", planets_path, class: "btn btn-outline-light"%>
      </div>
      <div>
        <%= link_to "Delete your planet", planet_path(@planet), data: { turbo_method: :delete }, class: "btn btn-outline-light"%>
      </div>
      <div>
        <%= link_to "Edit your planet", edit_planet_path, class: "btn btn-outline-light"%>
        <%= link_to "Add a review !", new_planet_review_path(@planet), class: "btn btn-outline-light"%>
      </div>
    </div>
  </div>
